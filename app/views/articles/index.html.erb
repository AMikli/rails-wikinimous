<div class="container">
  <div class="row">
    <% @articles.each do |article| %>
      <div class="col-sm-8 col-sm-offset-2">
        <h2>
          <%= link_to article.title, article_path(article.id) %>
        </h2>
        <p><%= article.content %></p>
      </div>
    <% end %>
    </div>
</div>
